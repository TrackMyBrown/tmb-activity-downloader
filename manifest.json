{
  "manifest_version": 3,
  "name": "TrackMyBets - Data Download",
  "version": "0.1.0",
  "description": "Download combined Sportsbet bet + transaction exports.",
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrackMyBets - Data Download",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": ["activeTab", "scripting", "downloads"],
  "host_permissions": ["https://www.sportsbet.com.au/*"]
}
